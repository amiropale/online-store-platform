{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types" , "src/types"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}